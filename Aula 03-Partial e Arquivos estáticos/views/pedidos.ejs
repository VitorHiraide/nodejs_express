    <%# Comentário no EJS %>

    <h4>forEach sem tabela:</h4>
    <% pedidos.forEach((pedido) => { %> <!-- pedidos está no plural porque irá mostrar toda a lista de pedidos--> 
        produto : <%= pedido.produto %> <br> <!-- pedido está no singular porque irá mostrar cada produto por vez-->
        produto : <%= pedido.valor %> <br><br>
   <% }) %>
    
        <h4>forEach com tabela:</h4>
        <table border="1">
            <tr>
                <th whidth="150px">Produto:</th>
                <th>Preço:</th>
            </tr>
            <tr>
                <% pedidos.forEach((pedido) => { %>
                    <td> <%= pedido.produto %></td>
                    <td><%= pedido.valor %></td>
            </tr>
               <% }) %>
        </table>

